{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "note": {
      "type": "object",
      "required": ["id", "text"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "text": {
          "type": "string",
          "format": "text"
        }
      }
    },
    "noteCreate": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "format": "text"
        }
      }
    }
  }
}
